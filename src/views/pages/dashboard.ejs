<!-- Hero Section -->
<section class="hero">
  <div class="container-wide">
    <div class="text-center">
      <h1 class="hero-title">
        Helping Disaster Victims<br>
        <span style="color: var(--accent-color);">Faster & Smarter</span>
      </h1>
      <p class="hero-subtitle">
        Connecting NGOs, Volunteers, and Donors with people in need during critical times.
      </p>
      <div class="hero-actions">
        <a href="/request-help" class="hero-btn hero-btn-primary">
          <span>🆘</span>
          Request Help
        </a>
        <a href="/donate" class="hero-btn hero-btn-secondary">
          <span>💝</span>
          Donate Now
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Emergency Contact Panel -->
<section class="emergency-contacts">
  <div class="container-wide">
    <div class="emergency-contacts-container">
      <div class="emergency-contact">
        <span class="emergency-contact-icon">📞</span>
        <div class="emergency-contact-info">
          <div class="emergency-contact-label">National Disaster Helpline</div>
          <div class="emergency-contact-number">1078</div>
        </div>
      </div>
      <div class="emergency-contact">
        <span class="emergency-contact-icon">🚑</span>
        <div class="emergency-contact-info">
          <div class="emergency-contact-label">Ambulance</div>
          <div class="emergency-contact-number">108</div>
        </div>
      </div>
      <div class="emergency-contact">
        <span class="emergency-contact-icon">🚒</span>
        <div class="emergency-contact-info">
          <div class="emergency-contact-label">Fire & Rescue</div>
          <div class="emergency-contact-number">101</div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Welcome Section -->
<section class="welcome-section">
  <div class="container-wide">
    <div class="welcome-content">
      <h2 class="welcome-title">
        Welcome back, <%= user.name %>!
      </h2>
      <p class="welcome-subtitle">
        You're logged in as a <span class="welcome-role"><%= user.role %></span>
      </p>
    </div>
  </div>
</section>

<!-- Quick Actions Section -->
<section class="quick-actions">
  <div class="container-wide">
    <h2 class="quick-actions-title">Quick Actions</h2>
    <div class="quick-actions-grid">
      <a href="/resources" class="quick-action-card card-3d">
        <div class="quick-action-icon blue">
          <span>📦</span>
        </div>
        <h3 class="quick-action-title">View Resources</h3>
        <p class="quick-action-description">Check available relief items and supplies</p>
      </a>
      
      <a href="/request-help" class="quick-action-card card-3d">
        <div class="quick-action-icon orange">
          <span>🆘</span>
        </div>
        <h3 class="quick-action-title">Request Help</h3>
        <p class="quick-action-description">Submit your needs and get assistance</p>
      </a>
      
      <a href="/donate" class="quick-action-card card-3d">
        <div class="quick-action-icon green">
          <span>💝</span>
        </div>
        <h3 class="quick-action-title">Donate</h3>
        <p class="quick-action-description">Contribute resources to help others</p>
      </a>
      
      <a href="/about" class="quick-action-card card-3d">
        <div class="quick-action-icon purple">
          <span>ℹ️</span>
        </div>
        <h3 class="quick-action-title">Learn More</h3>
        <p class="quick-action-description">About our disaster relief system</p>
      </a>
    </div>
  </div>
</section>

<!-- About Section -->
<section class="about-section">
  <div class="container-wide">
    <div class="about-content">
      <h2 class="about-title">How It Works</h2>
      <p class="about-subtitle">
        Our platform connects victims, donors, volunteers, and administrators in a coordinated relief effort.
      </p>
    </div>
    
    <div class="about-grid">
      <div class="about-item">
        <div class="about-item-icon red">
          <span>🆘</span>
        </div>
        <h3 class="about-item-title">Victims</h3>
        <p class="about-item-description">Submit requests for help and track status</p>
      </div>
      
      <div class="about-item">
        <div class="about-item-icon green">
          <span>💝</span>
        </div>
        <h3 class="about-item-title">Donors</h3>
        <p class="about-item-description">Contribute resources and track impact</p>
      </div>
      
      <div class="about-item">
        <div class="about-item-icon blue">
          <span>🤝</span>
        </div>
        <h3 class="about-item-title">Volunteers</h3>
        <p class="about-item-description">Get assigned tasks and help distribute aid</p>
      </div>
      
      <div class="about-item">
        <div class="about-item-icon purple">
          <span>🛠️</span>
        </div>
        <h3 class="about-item-title">Admin</h3>
        <p class="about-item-description">Coordinate and manage the entire system</p>
      </div>
    </div>
  </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section">
  <div class="container-wide text-center">
    <h2 class="cta-title">Ready to Make a Difference?</h2>
    <p class="cta-subtitle">
      Every action counts in disaster relief. Choose how you want to help today.
    </p>
    <div class="cta-actions">
      <a href="/request-help" class="cta-btn cta-btn-primary">
        Request Help
      </a>
      <a href="/donate" class="cta-btn cta-btn-secondary">
        Become a Donor
      </a>
      <a href="/resources" class="cta-btn cta-btn-outline">
        View Resources
      </a>
    </div>
  </div>
</section>
